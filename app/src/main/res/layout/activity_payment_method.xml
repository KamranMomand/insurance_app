<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentMethod">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_design"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/backicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/back_arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Payment Method"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="433dp"
        android:layout_height="329dp"
        android:background="@drawable/background_design"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="@drawable/get_start"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:elevation="40dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/dueDateReadText"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_input_field"
            android:drawablePadding="6.50dp"
            android:hint="Due Date "
            android:textIsSelectable="false"
            android:editable="false"
            android:fontFamily="@font/poppins_regular"
            android:inputType="none"
            android:padding="13dp"
            android:textColor="@color/text_secondary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/insuranceDateReadText"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_input_field"
            android:drawablePadding="6.50dp"
            android:textIsSelectable="false"
            android:editable="false"
            android:inputType="none"
            android:hint="Insurance Date"
            android:fontFamily="@font/poppins_regular"
            android:padding="13dp"
            android:textColor="@color/text_secondary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_input_field"
            android:drawablePadding="6.50dp"
            android:hint="Enter Your Card Number"
            android:inputType="text"
            android:fontFamily="@font/poppins_regular"
            android:padding="13dp"
            android:textColor="@color/text_secondary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="116dp"
        android:background="@drawable/btn_orange"
        android:paddingTop="5dp"
        android:text="Pay Now"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>